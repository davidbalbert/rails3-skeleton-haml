!!!
%html
  %head
    %title Myapp
    = stylesheet_link_tag :all
    = javascript_include_tag :defaults
    = csrf_meta_tag
  %body
    - if current_user
      = link_to "Logout", logout_path
    - else
      = link_to_unless_current "Log in", login_path

    - if flash[:notice]
      #notice #{flash[:notice]}
    = yield
